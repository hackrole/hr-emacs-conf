class SecondTest(UTestBase):
    def test_index(self):
        response = self.client.get('/api1/business/sec')
        self.assertTrue(response.status_code, 200)

        result = json.loads(response.content)
        self.assertTrue(result.has_key('data'))

        data = result.get('data')
        self.assertTrue(data.has_key('cate_list'))
        #self.assertTrue(len(data.has_key()))

