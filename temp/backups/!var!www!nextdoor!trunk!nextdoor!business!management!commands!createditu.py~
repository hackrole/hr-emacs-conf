#!/usr/bin/env python
#coding=utf8

from django.core.management.base import BaseCommand, CommandError
from django.conf import settings
from optparse import make_options

from business import models


class Command(BaseCommand):

    args = "none"
    help = "create a ditu user"
    options = BaseCommand.option_list + (
        make_option("-m", "--mobile", action="store", dest="mobile",
                    help="set the user mobile", metavar="mobile"),
        make_option("-p", "--password", action="store", dest="password",
                    help="set the user password", metavar="password"),
    )

    def handle(self, *args, **options):
